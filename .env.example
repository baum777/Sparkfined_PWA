# Sparkfined PWA - Environment Variables Template
# Copy this file to `.env.local` and fill in your values
# DO NOT commit `.env.local` to git (already in .gitignore)

# ============================================
# REQUIRED (FRONTEND)
# ============================================

# App Version (displayed in Settings)
VITE_APP_VERSION=1.0.0-beta

# ============================================
# OPTIONAL (FRONTEND)
# ============================================

# Web Push Notifications (VAPID Public Key)
# Generate via: npx web-push generate-vapid-keys
# Only public key goes here (private key in backend)
VITE_VAPID_PUBLIC_KEY=

# API Base URL (if different from same-origin)
# Default: Same origin (empty = relative URLs)
VITE_API_BASE_URL=

# Enable Debug Mode (shows console logs in production)
# Default: false
VITE_DEBUG=false
VITE_ENABLE_DEBUG=false

# ============================================
# DATA PROVIDERS (FRONTEND)
# ============================================

# Moralis API Configuration (Frontend)
VITE_MORALIS_BASE=https://deep-index.moralis.io/api/v2.2
VITE_MORALIS_API_KEY=

# DexPaprika API Configuration (Frontend)
VITE_DEXPAPRIKA_BASE=https://api.dexpaprika.com

# Data Provider Priority
# Primary: dexpaprika | moralis | mock
# Secondary: moralis | none
VITE_DATA_PRIMARY=dexpaprika
VITE_DATA_SECONDARY=moralis
VITE_DATA_FALLBACKS=dexscreener,pumpfun

# External API Configuration
DEX_API_BASE=https://api.dexscreener.com
DEX_API_TIMEOUT=5000
PUMPFUN_API_BASE=https://api.pump.fun
PUMPFUN_API_TIMEOUT=5000

# ============================================
# BLOCKCHAIN (FRONTEND)
# ============================================

# Solana Network Configuration
VITE_SOLANA_NETWORK=mainnet-beta
VITE_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Access System Configuration
ACCESS_OG_SYMBOL=OGPASS
ACCESS_TOKEN_MINT=So11111111111111111111111111111111111111112

# ============================================
# REQUIRED (BACKEND - Vercel Edge Functions)
# ============================================

# Moralis API (Backend)
MORALIS_API_KEY=
MORALIS_BASE=https://deep-index.moralis.io/api/v2.2

# DexPaprika API (Backend)
DEXPAPRIKA_API_KEY=
DEXPAPRIKA_BASE=https://api.dexpaprika.com

# AI Provider API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
XAI_API_KEY=

# AI Configuration
AI_MAX_COST_USD=0.25
AI_CACHE_TTL_SEC=3600
ANALYSIS_AI_PROVIDER=none

# VAPID Keys (for Web Push Notifications)
# Generate via: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:your-email@example.com
VAPID_CONTACT=mailto:your-email@example.com

# ============================================
# OPTIONAL (BACKEND)
# ============================================

# Solana RPC Endpoint (Backend)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_KEYPAIR_JSON=

# (No additional backend services required)

# ============================================
# FEATURE FLAGS (FRONTEND)
# ============================================

# Enable/Disable Features
VITE_ENABLE_AI_TEASER=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_METRICS=true

# Provider Selection
VITE_ORDERFLOW_PROVIDER=none
VITE_WALLETFLOW_PROVIDER=none

# ============================================
# PERFORMANCE BUDGETS (OPTIONAL)
# ============================================

# Performance Monitoring Thresholds (milliseconds)
PERF_BUDGET_START_MS=1000
PERF_BUDGET_API_MEDIAN_MS=500
PERF_BUDGET_AI_TEASER_P95_MS=2000
PERF_BUDGET_REPLAY_OPEN_P95_MS=350
PERF_BUDGET_JOURNAL_SAVE_MS=60
PERF_BUDGET_JOURNAL_GRID_MS=250
PERF_BUDGET_EXPORT_ZIP_P95_MS=800

# ============================================
# ANALYTICS & MONITORING (OPTIONAL)
# ============================================

# Vercel Analytics (automatically enabled on Vercel Pro)
# No additional configuration needed

# ============================================
# DEPLOYMENT (VERCEL)
# ============================================

# These are set automatically by Vercel, no need to add:
# VERCEL=1
# VERCEL_ENV=production|preview|development
# VERCEL_URL=<auto-generated-preview-url>
# VERCEL_GIT_COMMIT_SHA=<commit-hash>

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Local API Mock Server (if using separate backend for dev)
DEV_API_URL=http://localhost:8787

# Skip HTTPS redirect (for local testing)
DEV_SKIP_HTTPS=true

# ============================================
# QUICK SETUP GUIDE
# ============================================

# MINIMUM REQUIRED FOR MVP:
# 1. VITE_APP_VERSION=1.0.0-beta
# 2. Choose one data provider:
#    Option A: MORALIS_API_KEY + MORALIS_BASE (recommended)
#    Option B: DEXPAPRIKA_API_KEY + DEXPAPRIKA_BASE
# 3. (Optional) OPENAI_API_KEY for AI features

# FULL PRODUCTION SETUP:
# 1. All REQUIRED fields above
# 2. VAPID keys for push notifications: npx web-push generate-vapid-keys
# 3. Add all keys to Vercel Dashboard â†’ Environment Variables

# API KEY RESOURCES:
# - Moralis: https://admin.moralis.io/
# - DexPaprika: https://www.dexpaprika.com/api (if available)
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/
