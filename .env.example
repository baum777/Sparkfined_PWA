# Sparkfined PWA - Environment Variables Template
# Copy this file to `.env.local` and fill in your values
# DO NOT commit `.env.local` to git (already in .gitignore)

# ============================================
# REQUIRED (FRONTEND)
# ============================================

# App Version (displayed in Settings)
VITE_APP_VERSION=1.0.0-beta

# ============================================
# DATA PROVIDERS (FRONTEND & BACKEND) - ACTIVE
# ============================================

# Moralis API Configuration (server-side secrets only)
VITE_MORALIS_BASE=https://deep-index.moralis.io/api/v2.2
MORALIS_API_KEY=REDACTED_TOKEN
MORALIS_BASE_URL=https://deep-index.moralis.io/api/v2.2
MORALIS_PROXY_TTL_MS=60000
MORALIS_WEBHOOK_SECRET=REDACTED_TOKEN

# DexPaprika API Configuration
VITE_DEXPAPRIKA_BASE=https://api.dexpaprika.com
DEXPAPRIKA_API_KEY=REDACTED_TOKEN
DEXPAPRIKA_BASE=https://api.dexpaprika.com
DATA_PROXY_SECRET=REDACTED_TOKEN

# Data Provider Priority
# Primary: dexpaprika | moralis | mock
# Secondary: moralis | none
VITE_DATA_PRIMARY=dexpaprika
VITE_DATA_SECONDARY=moralis
VITE_DATA_FALLBACKS=dexscreener,pumpfun

# ============================================
# AI FEATURES - ACTIVE
# ============================================

# OpenAI API
OPENAI_API_KEY=REDACTED_TOKEN

# xAI/Grok API
XAI_API_KEY=REDACTED_TOKEN

# AI Configuration
AI_MAX_COST_USD=0.25
AI_CACHE_TTL_SEC=3600
AI_PROXY_SECRET=REDACTED_TOKEN
ANALYSIS_AI_PROVIDER=openai

# ============================================
# OPTIONAL (FRONTEND)
# ============================================

# Enable Debug Mode (shows console logs in production)
# Default: false
VITE_DEBUG=false
VITE_ENABLE_DEBUG=false

# ============================================
# FEATURE FLAGS (FRONTEND)
# ============================================

# Enable/Disable Features
VITE_ENABLE_AI_TEASER=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_METRICS=true

# Live Data v1 Configuration
VITE_LIVE_V1_ENABLED=false
VITE_LIVE_DATA_MODE=auto
VITE_LIVE_POLL_INTERVAL_MS=3000
VITE_LIVE_PASSIVE_INTERVAL_MS=15000
VITE_SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Provider Selection
VITE_ORDERFLOW_PROVIDER=none
VITE_WALLETFLOW_PROVIDER=none

