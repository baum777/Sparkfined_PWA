# Sparkfined PWA - Environment Variables Template
# Copy this file to `.env.local` and fill in your values
# DO NOT commit `.env.local` to git (already in .gitignore)

# ============================================
# REQUIRED (FRONTEND)
# ============================================

# App Version (displayed in Settings)
VITE_APP_VERSION=1.0.0-beta

# ============================================
# OPTIONAL (FRONTEND)
# ============================================

# Web Push Notifications (VAPID Public Key)
# Generate via: npx web-push generate-vapid-keys
# Only public key goes here (private key in backend)
VITE_VAPID_PUBLIC_KEY=

# API Base URL (if different from same-origin)
# Default: Same origin (empty = relative URLs)
VITE_API_BASE_URL=

# Enable Debug Mode (shows console logs in production)
# Default: false
VITE_DEBUG=false

# ============================================
# REQUIRED (BACKEND - Vercel Edge Functions)
# ============================================

# AI Provider API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
XAI_API_KEY=

# AI Cost Limit (USD per call, server-side enforcement)
AI_MAX_COST_USD=0.25

# VAPID Keys (for Web Push Notifications)
# Generate via: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:your-email@example.com

# ============================================
# OPTIONAL (BACKEND)
# ============================================

# Solana RPC Endpoint (for on-chain access verification)
# Default: Helius free tier
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Database (if using Vercel Postgres/Neon/Supabase)
DATABASE_URL=

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_RPM=60

# CORS Allowed Origins (comma-separated)
# Default: Same origin only
CORS_ORIGINS=https://your-domain.vercel.app,https://your-custom-domain.com

# ============================================
# DEPLOYMENT (VERCEL)
# ============================================

# These are set automatically by Vercel, no need to add:
# VERCEL=1
# VERCEL_ENV=production|preview|development
# VERCEL_URL=<auto-generated-preview-url>
# VERCEL_GIT_COMMIT_SHA=<commit-hash>

# ============================================
# ANALYTICS & MONITORING (OPTIONAL)
# ============================================

# Vercel Analytics (automatically enabled on Vercel Pro)
# No env var needed

# Sentry Error Tracking
VITE_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Umami Analytics (self-hosted alternative to Google Analytics)
VITE_UMAMI_WEBSITE_ID=
VITE_UMAMI_SRC=https://your-umami-instance.com/script.js

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Local API Mock Server (if using separate backend for dev)
DEV_API_URL=http://localhost:8787

# Skip HTTPS redirect (for local testing)
DEV_SKIP_HTTPS=true
